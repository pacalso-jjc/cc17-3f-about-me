<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jeremiah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutJeremiahActivity"
    android:background="@android:color/white">>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeremiah Gomez"
            android:textSize="50dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="26dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avid Gacha \n    Enjoyer"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="163dp"
            android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/summoning"
            android:layout_width="374dp"
            android:layout_height="233dp"
            app:srcCompat="@drawable/ban"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="295dp"
            android:layout_gravity="center"/>

            <Button
                android:id="@+id/summon"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="Summon"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="728dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>